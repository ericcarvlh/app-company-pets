<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cadastro.CadastroFragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCEPCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="CEP"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="8"
            app:helperText="Ex: 05089-000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCEP_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="9" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutLogradouroCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:hint="Rua"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="80"
            app:helperText="Ex: Rua Guiapá"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCEPCadastro"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLogradouro_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="81" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutBairroCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:hint="Bairro"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="60"
            app:helperText="Ex: Vila Leopoldina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutLogradouroCadastro"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextBairro_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="61" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNumeroCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:hint="Número"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="5"
            app:helperText="Ex: 678"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutBairroCadastro"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNumero_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numeric="integer"
                android:inputType="text"
                android:maxLength="6" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCidadeCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:hint="Cidade"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="60"
            app:helperText="Ex: São Paulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNumeroCadastro"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCidade_Cadastro"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="61" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutUFCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:enabled="false"
            android:hint="UF"
            android:visibility="visible"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="2"
            app:helperText="Ex: SP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNumeroCadastro">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUF_Cadastro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutComplementoCadastro"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:hint="Complemento"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#4BB4FF"
            app:counterMaxLength="60"
            app:helperText="Ex: Apartamento, bloco 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCidadeCadastro"
            app:startIconDrawable="@drawable/ic_baseline_location_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextComplemento_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="256" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:text="Ao cadastrar-se você concorda com os TERMOS e CONDIÇÕES"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutComplementoCadastro" />

        <Button
            android:id="@+id/buttonFinalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_custom"
            android:text="Finalizar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>